<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_main_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_TOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="210dp" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewpager"
            android:layout_marginTop="-25px"
            android:gravity="right"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_TOP"
        android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="8"
                android:background="#ef505d" >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/a90"
                    android:gravity="center_vertical"
                    android:text="精选1" />
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="#47c3c8" >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/a84"
                    android:gravity="center_vertical"
                    android:text="精选2" />
            </RelativeLayout>
      
            <RelativeLayout
                 android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:background="#12a3d5" >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/a108"
                    android:gravity="center_vertical"
                    android:text="精选3" />
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:background="#f0ef9a" >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/a78"
                    android:gravity="center_vertical"
                    android:text="精选4" />
            </RelativeLayout>
            
    </LinearLayout>

</LinearLayout>